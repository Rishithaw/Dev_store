<h1>Your Shopping Cart</h1>

<% if @cart_items.any? %>
  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @cart_items.each do |product| %>
        <tr>
          <td><%= link_to product.name, product_path(product) %></td>

          <td><%= session[:cart][product.id.to_s] %></td>

          <td>$<%= product.price %></td>

          <td>
            $<%= product.price * session[:cart][product.id.to_s] %>
          </td>

          <td>
            <%= button_to "Remove",
                cart_remove_path(product.id),
                method: :post %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <hr>

  <p>
    <strong>Cart Total:</strong>
    $<%= @cart_items.sum { |p| p.price * session[:cart][p.id.to_s] } %>
  </p>

  <%= button_to "Clear Cart", cart_clear_path, method: :post %>

<% else %>
  <p>Your cart is empty.</p>
<% end %>

<hr>

<%= link_to "Continue Shopping", products_path %>
