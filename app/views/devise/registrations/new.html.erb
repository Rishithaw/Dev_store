<h2 class="mb-4">Create Your Account</h2>

<%= form_with model: resource,
              as: resource_name,
              url: registration_path(resource_name),
              local: true,
              class: "mt-3" do |f| %>

  <% if resource.errors.any? %>
    <div class="alert alert-danger">
      <h4>There were problems creating your account:</h4>
      <ul>
        <% resource.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <%# OPTIONAL: Username (if your User model has this column) %>
  <% if resource.respond_to?(:username) %>
    <div class="mb-3">
      <%= f.label :username %>
      <%= f.text_field :username, class: "form-control" %>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    <small class="text-muted"><%= @minimum_password_length %> characters minimum</small>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div>
    <%= f.submit "Create Account", class: "btn btn-success w-100" %>
  </div>
<% end %>

<hr>

<%= link_to "Back to Login", new_session_path(resource_name), class: "btn btn-outline-secondary w-100" %>
